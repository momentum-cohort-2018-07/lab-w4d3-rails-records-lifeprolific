<h1>Albums</h1>
<%= link_to 'add new album...', new_album_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Artist</th>
    <th>Released</th>
  </tr>
  <% @albums.each do |album| %>
    <tr>
      <td><%= link_to album.title, album %></td>
      <td><%= album.artist_name %></td>
      <td><%= album.year_released.year %></td>
      <td><%= link_to 'edit', edit_album_path(album) %></td>
      <td><%= link_to 'delete', album_path(album), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>